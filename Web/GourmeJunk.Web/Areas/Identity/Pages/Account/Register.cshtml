@page

@using GourmeJunk.Common

@model RegisterModel

@{
    ViewData["Title"] = "Register";
}
    <h1 class="text-center">@ViewData["Title"]</h1>
    <div class="row justify-content-center">        
        <div class="col-md-4">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 class="text-center">Create a new account.</h4>
                <hr />
                <span class="text-danger">@Html.ValidationSummary(true)</span>
                <div class="form-group">
                    <label asp-for="Input.FirstName" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Address" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </div>

                @if (User.IsInRole(GlobalConstants.ADMINISTRATOR_ROLE_NAME))
                {
                    <div class="form-group row justify-content-center">
                        <div>
                            <div class="form-check form-check-inline">
                                <input type="radio" class="form-check-input" id="kitchenRole" name="inputUserRole" value="@GlobalConstants.KITCHEN_ROLE_NAME" checked />
                                <label for="kitchenRole" class="form-check-label text-secondary font-weight-bold" style="font-size: 1.2rem">@GlobalConstants.KITCHEN_ROLE_NAME</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input type="radio" class="form-check-input" id="deliveryRole" name="inputUserRole" value="@GlobalConstants.RECEPTION_ROLE_NAME" checked />
                                <label for="deliveryRole" class="form-check-label text-secondary font-weight-bold" style="font-size: 1.2rem">@GlobalConstants.RECEPTION_ROLE_NAME</label>
                            </div>
                        </div>
                    </div>
                }

                <div class="text-center">
                    <button type="submit" class="btn btn-lg btn-primary px-5">Register</button>
                </div>
            </form>
        </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
