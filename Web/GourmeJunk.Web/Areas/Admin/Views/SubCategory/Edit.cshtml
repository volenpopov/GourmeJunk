@using GourmeJunk.Models.ViewModels.SubCategories
@model SubCategoryEditViewModel

@{
    ViewData["Title"] = "Edit SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit SubCategory</h2>
<br />

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="border backgroundWhite row">
    <div class="col-12 col-md-9 border-right">
        <form asp-action="Edit">
            <input type="hidden" asp-for="CategoryId" />
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="CategoryId" class="col-form-label text-secondary font-weight-bold"></label>
                </div>
                <div class="col-md-5 col-8 offset-1 offset-sm-0">
                    <select disabled class="form-control">
                        <option>@Model.CategoryName</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="col-form-label text-secondary font-weight-bold"></label>
                </div>
                <div class="col-md-5 col-8 offset-1 offset-sm-0">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-5 col-12 offset-md-3">
                    <partial name="_EditAndBackToListButton" model="Model.Id" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-12 col-md-3 mt-3 mt-md-0 text-center">
        @if (Model.SubCategoryList.Count() > 0)
        {
            <p class="text-secondary font-weight-bold">Existing Subcategories:</p>

            <div id="SubCategoryList">
                <ul class="list-group list-group-flush">
                    @foreach (var subCategoryName in Model.SubCategoryList)
                    {
                        <li class="list-group-item">@subCategoryName</li>
                    }
                </ul>
            </div>
        }
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}