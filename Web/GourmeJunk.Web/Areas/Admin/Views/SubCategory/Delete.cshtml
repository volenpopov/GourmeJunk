@using GourmeJunk.Models.ViewModels.SubCategories
@model  SubCategoryViewModel

@{
    ViewData["Title"] = "Delete SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">SubCategory Delete</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Id" />
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="Name" class="custom-label text-secondary font-weight-bold"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">
                    <label asp-for="CategoryName" class="custom-label text-secondary font-weight-bold"></label>
                </div>
                <div class="col-sm-5">
                    <input asp-for="CategoryName" class="form-control" />
                </div>
            </div>
        </fieldset>
        <br />
        <div class="form-group row">
            <div class="col-sm-5 offset-sm-2 offset-0">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>

