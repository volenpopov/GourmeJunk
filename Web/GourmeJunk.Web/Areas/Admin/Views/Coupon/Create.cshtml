@using GourmeJunk.Models.ViewModels.Coupons
@using GourmeJunk.Data.Models

@model CouponCreateViewModel

@{
    ViewData["Title"] = "Create Coupon";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var statusMessage = @Model == null ? null : @Model.StatusMessage;
}

<h2 class="text-info">Create Coupon</h2>
<br />

<partial name="_StatusMessage" model="@statusMessage" />

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label text-secondary font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label text-secondary font-weight-bold">Image</label>
            </div>
            <div class="col-5">
                <input type="file" id="projectImage" name="files" multiple class="btn btn-outline-secondary"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label text-secondary font-weight-bold"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<CouponType>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label text-secondary font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="Discount" class="form-control" />
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumOrderAmount" class="col-form-label text-secondary font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumOrderAmount" class="form-control" />
            </div>
            <span asp-validation-for="MinimumOrderAmount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label text-secondary font-weight-bold"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" style="transform: scale(2)" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}