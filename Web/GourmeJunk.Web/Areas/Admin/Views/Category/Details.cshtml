@using GourmeJunk.Models.ViewModels.Categories
@model  CategoryViewModel

@{
    ViewData["Title"] = "Details Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Category Details</h2>
<br />
<div class=" border  backgroundWhite">
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Name" class="text-secondary font-weight-bold">Category Name</label>
        </div>
        <div class="col-sm-5">
            <input asp-for="Name" disabled class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-5 offset-sm-2 offset-0">
            <partial name="_DetailsAndBackToListButton" model="Model.Id" />
        </div>
    </div>

</div>
