@using GourmeJunk.Models.ViewModels.Categories
@model CategoryEditViewModel

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Category</h2>
<br />

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<form method="post" asp-action="Edit">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row flex-column flex-sm-row">
            <div class="col-sm-2">
                <label asp-for="Name" class="col-form-label text-secondary font-weight-bold">Category Name</label>
            </div>
            <div class="col-sm-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-5 offset-0 offset-sm-2">
                <partial name="_EditAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>


@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}