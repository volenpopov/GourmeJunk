@using GourmeJunk.Models.ViewModels.MenuItems
@model MenuItemViewModelExtended

@{
    ViewData["Title"] = "Delete MenuItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Delete MenuItem</h2>
<br />
<form method="post">
    <div class="border backgroundWhite row">
        <div class="col-md-8">
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name" class="custom-label text-secondary font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description" class="custom-label text-secondary font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <textarea class="form-control" rows="3" asp-for="Description"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price" class="custom-label text-secondary font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="Price" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId" class="custom-label text-secondary font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="CategoryName" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="SubCategoryId" class="custom-label text-secondary font-weight-bold"></label>
                    </div>
                    <div class="col-md-8">
                        <input asp-for="SubCategoryName" class="form-control" />
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-6 col-md-3 offset-md-1 offset-0 mb-3">
            <img src="@Model.Image" class="w-100" style="padding: 3px; border-radius:5px; border: 2px solid #bbb9b9;" />
        </div>
        <div class="col-md-8 pl-0 pl-md-2">
            <div class="col-md-8 offset-md-4 offset-0">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>


