@using GourmeJunk.Models.ViewModels.Home
@model IEnumerable<IndexMenuItemViewModel>

@if (Model.Count() > 0)
{
    <div class="col-12 mb-3 post @Model.FirstOrDefault().CategoryName menu-restaurant">
        <div class="row">
            <h3 class="text-warning font-weight-bold"> @Model.FirstOrDefault().CategoryName </h3>
        </div>

        @foreach (var item in Model)
        {
            <div class="col-12" style="margin-bottom:10px; margin-top:10px; padding:10px; border: 3px solid; border-color: #343a40; border-radius: 5px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" class="w-100" style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12 row align-content-between">
                        <div class="row flex-grow-1 pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px;color:maroon">@item.Name</label>
                                <label class="text-primary d-block">
                                    @if (item.SubCategoryName != null)
                                    {
                                        <span style="font-size:13px; background-color: #3a97b9; color: white; padding: 2px 5px;">@item.SubCategoryName</span>
                                    }
                                </label>
                            </div>
                            <div class="col-4 text-right" style="color:maroon">
                                <h4>$@item.Price</h4>
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <p class="font-italic" style="font-weight: 500">
                                @if (item.Description == null)
                                {
                                    <span>No Description</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                        </p>
                    </div>
                    <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                        <a asp-action="Details" class="btn btn-dark form-control" asp-route-id="@item.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
    </div>
}